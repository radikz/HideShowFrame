<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="10dp">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="65dp"
                app:srcCompat="@drawable/trailer"
                tools:layout_editor_absoluteX="16dp" />

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_marginLeft="-20dp"
                android:layout_marginTop="-50dp"
                android:layout_marginBottom="-10dp">

                <TextView
                    android:id="@+id/text_pengisian_moda_transport_awal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="70dp"
                    android:hint="Transport"
                    android:textSize="20dp" />
            </android.support.design.widget.TextInputLayout>

            <com.nex3z.togglebuttongroup.SingleSelectToggleGroup
                android:id="@+id/group_single_radiobutton"
                android:layout_width="wrap_content"
                android:layout_height="55dp"
                android:layout_gravity="center"
                android:padding="5dp"
                app:tbgCheckedButton="@+id/choice_apv"
                app:tbgChildSpacing="15dp">

                <RadioButton
                    android:id="@+id/choice_apv"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:background="@drawable/selector_bg_radio_button"
                    android:button="@null"
                    android:gravity="center"
                    android:paddingLeft="16dp"
                    android:paddingTop="8dp"
                    android:paddingRight="16dp"
                    android:paddingBottom="8dp"
                    android:text="APV"
                    android:textColor="@color/selector_text_radio_button" />

                <RadioButton
                    android:id="@+id/choice_crane"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:background="@drawable/selector_bg_radio_button"
                    android:button="@null"
                    android:gravity="center"
                    android:paddingLeft="16dp"
                    android:paddingTop="8dp"
                    android:paddingRight="16dp"
                    android:paddingBottom="8dp"
                    android:text="HYAPCRANE"
                    android:textColor="@color/selector_text_radio_button" />

                <RadioButton
                    android:id="@+id/choice_trailer"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:background="@drawable/selector_bg_radio_button"
                    android:button="@null"
                    android:gravity="center"
                    android:paddingLeft="16dp"
                    android:paddingTop="8dp"
                    android:paddingRight="16dp"
                    android:paddingBottom="8dp"
                    android:text="TRAILER"
                    android:textColor="@color/selector_text_radio_button" />

            </com.nex3z.togglebuttongroup.SingleSelectToggleGroup>


            <!--tempat pemetaan moda trasnportasi-->

            <!--trai-->
            <!--hyap-->

            <FrameLayout
                android:id="@+id/frame_apv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:background="#ffffff"
                android:padding="5dp"
                android:visibility="visible">

                <HorizontalScrollView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:layout_gravity="center">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="65dp"
                            android:layout_height="94dp"
                            android:layout_marginLeft="-3dp"
                            android:layout_marginTop="15dp"
                            android:src="@drawable/apv" />

                        <com.nex3z.togglebuttongroup.SingleSelectToggleGroup
                            android:id="@+id/group_single_radiobutton_frame_apv"
                            android:layout_width="265dp"
                            android:layout_height="120dp"
                            android:layout_marginLeft="63dp"
                            android:layout_marginTop="0dp"
                            android:background="#fff"
                            android:padding="5dp"
                            app:tbgCheckedButton="@+id/choice_1"
                            app:tbgChildSpacing="10dp">

                            <com.nex3z.togglebuttongroup.button.CircularToggle
                                android:id="@+id/choice_1"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_margin="1dp"
                                android:background="@drawable/selector_bg_radio_button"
                                android:button="@null"
                                android:gravity="center"
                                android:text="1"
                                android:textColor="@color/selector_text_radio_button" />

                            <com.nex3z.togglebuttongroup.button.CircularToggle
                                android:id="@+id/choice_2"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_margin="1dp"
                                android:layout_toRightOf="@id/choice_1"
                                android:background="@drawable/selector_bg_radio_button"
                                android:button="@null"
                                android:gravity="center"
                                android:text="2"
                                android:textColor="@color/selector_text_radio_button" />

                            <com.nex3z.togglebuttongroup.button.CircularToggle
                                android:id="@+id/choice_3"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_margin="1dp"
                                android:layout_toRightOf="@id/choice_2"
                                android:background="@drawable/selector_bg_radio_button"
                                android:button="@null"
                                android:gravity="center"
                                android:text="3"
                                android:textColor="@color/selector_text_radio_button" />

                            <com.nex3z.togglebuttongroup.button.CircularToggle
                                android:id="@+id/choice_4"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_margin="1dp"
                                android:layout_toRightOf="@id/choice_3"
                                android:background="@drawable/selector_bg_radio_button"
                                android:button="@null"
                                android:gravity="center"
                                android:text="4"
                                android:textColor="@color/selector_text_radio_button" />


                            <com.nex3z.togglebuttongroup.button.CircularToggle
                                android:id="@+id/choice_5"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_below="@id/choice_1"
                                android:layout_margin="1dp"
                                android:background="@drawable/selector_bg_radio_button"
                                android:button="@null"
                                android:gravity="center"
                                android:text="5"
                                android:textColor="@color/selector_text_radio_button" />

                            <com.nex3z.togglebuttongroup.button.CircularToggle
                                android:id="@+id/choice_6"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_below="@id/choice_2"
                                android:layout_margin="1dp"
                                android:layout_toRightOf="@id/choice_5"
                                android:background="@drawable/selector_bg_radio_button"
                                android:button="@null"
                                android:gravity="center"
                                android:text="6"
                                android:textColor="@color/selector_text_radio_button" />

                            <com.nex3z.togglebuttongroup.button.CircularToggle
                                android:id="@+id/choice_7"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_below="@id/choice_3"
                                android:layout_margin="1dp"
                                android:layout_toRightOf="@id/choice_6"
                                android:background="@drawable/selector_bg_radio_button"
                                android:button="@null"
                                android:gravity="center"
                                android:text="7"
                                android:textColor="@color/selector_text_radio_button" />

                            <com.nex3z.togglebuttongroup.button.CircularToggle
                                android:id="@+id/choice_8"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_below="@id/choice_4"
                                android:layout_margin="1dp"
                                android:layout_toRightOf="@id/choice_7"
                                android:background="@drawable/selector_bg_radio_button"
                                android:button="@null"
                                android:gravity="center"
                                android:text="8"
                                android:textColor="@color/selector_text_radio_button" />


                        </com.nex3z.togglebuttongroup.SingleSelectToggleGroup>
                    </RelativeLayout>
                </HorizontalScrollView>

            </FrameLayout>

            <FrameLayout
                android:id="@+id/frame_crane"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:background="#ffffff"
                android:padding="5dp"
                android:visibility="gone">


                <HorizontalScrollView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:layout_gravity="center">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="65dp"
                            android:layout_height="94dp"
                            android:layout_marginLeft="-3dp"
                            android:layout_marginTop="15dp"
                            android:src="@drawable/apv2" />

                        <com.nex3z.togglebuttongroup.SingleSelectToggleGroup
                            android:id="@+id/group_single_radiobutton_frame_hya"
                            android:layout_width="265dp"
                            android:layout_height="120dp"
                            android:layout_marginLeft="63dp"
                            android:layout_marginTop="0dp"
                            android:background="#fff"
                            android:padding="5dp"
                            app:tbgCheckedButton="@+id/choice_9"
                            app:tbgChildSpacing="10dp">

                            <com.nex3z.togglebuttongroup.button.CircularToggle
                                android:id="@+id/choice_9"
                                android:layout_width="70dp"
                                android:layout_height="105dp"
                                android:layout_margin="1dp"
                                android:background="@drawable/selector_bg_radio_button"
                                android:button="@null"
                                android:gravity="center"
                                android:text="1"
                                android:textColor="@color/selector_text_radio_button" />

                            <com.nex3z.togglebuttongroup.button.CircularToggle
                                android:id="@+id/choice_10"
                                android:layout_width="70dp"
                                android:layout_height="105dp"
                                android:layout_margin="1dp"
                                android:layout_toRightOf="@id/choice_9"
                                android:background="@drawable/selector_bg_radio_button"
                                android:button="@null"
                                android:gravity="center"
                                android:text="2"
                                android:textColor="@color/selector_text_radio_button" />

                            <com.nex3z.togglebuttongroup.button.CircularToggle
                                android:id="@+id/choice_11"
                                android:layout_width="70dp"
                                android:layout_height="105dp"
                                android:layout_margin="1dp"
                                android:layout_toRightOf="@id/choice_10"
                                android:background="@drawable/selector_bg_radio_button"
                                android:button="@null"
                                android:gravity="center"
                                android:text="3"
                                android:textColor="@color/selector_text_radio_button" />

                        </com.nex3z.togglebuttongroup.SingleSelectToggleGroup>
                    </RelativeLayout>
                </HorizontalScrollView>

            </FrameLayout>
            <!--hyap-->

            <!--trai-->
            <FrameLayout
                android:id="@+id/frame_trailer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:background="#ffffff"
                android:padding="5dp"
                android:visibility="gone">

                <HorizontalScrollView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:layout_gravity="center">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="65dp"
                            android:layout_height="94dp"
                            android:layout_marginLeft="-3dp"
                            android:layout_marginTop="15dp"
                            android:src="@drawable/apv3" />

                        <com.nex3z.togglebuttongroup.SingleSelectToggleGroup
                            android:id="@+id/group_single_radiobutton_frame_trai"
                            android:layout_width="265dp"
                            android:layout_height="120dp"
                            android:layout_marginLeft="63dp"
                            android:layout_marginTop="0dp"
                            android:background="#fff"
                            android:padding="5dp"
                            app:tbgCheckedButton="@+id/choice_12"
                            app:tbgChildSpacing="10dp">

                            <com.nex3z.togglebuttongroup.button.CircularToggle
                                android:id="@+id/choice_12"
                                android:layout_width="210dp"
                                android:layout_height="105dp"
                                android:layout_margin="1dp"
                                android:background="@drawable/selector_bg_radio_button"
                                android:button="@null"
                                android:gravity="center"
                                android:text="1"
                                android:textColor="@color/selector_text_radio_button" />

                        </com.nex3z.togglebuttongroup.SingleSelectToggleGroup>
                    </RelativeLayout>
                </HorizontalScrollView>

            </FrameLayout>
            <!--trai-->



        </LinearLayout>
    </ScrollView>
</RelativeLayout>